---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Hero3 from '~/components/widgets/Hero3.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Snowy-Lane',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!--<Hero3>
    <Fragment slot="title">
      <span class="hidden xl:inline">
        <span class="font-semibold"></span>
        </span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600"></span>
    </Fragment>
  </Hero3>-->

  <!-- Hero Widget ******************* -->
  <!--
  <Hero3
  image={{ src: logo_path, alt: 'scope-logo', width:'1284', height:'295'}}
  </Hero3>
  -->

  <Hero3
    image={{ src: '~/assets/images/Logo_v2', alt: 'snowy-lane-logo', width:'1024', height:'1024'}} 
    actions={[
      {
        variant: 'primary',
        text: 'Dataset',
        href: 'https://es-cloud.cs.uni-tuebingen.de/d/05d6ed2ea93f4c73a057/',
        target: '_blank',
        icon: 'tabler:download',
      },
      {
        variant: 'primary',
        text: 'Paper',
        href: 'https://www.arxiv.org/pdf/2408.03065',
        target: '_blank',
        icon: 'tabler:file-text',
      },
      
    ]}
  >
    <Fragment slot="title">
      <span class="hidden xl:inline">
        <span class="font-semibold"></span> Robust Lane Detection on Snow-covered Rural Roads Using Infrastructual Elements
        </span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600"></span>
    </Fragment>
  </Hero3>

 
  <Features
  id="overview"
  tagline="overview"
  title="What you get with Snowy-Lane?"
  subtitle="Snowy-Lane is the first dataset for robust lane detection in snow covered environments"
  items={[
      {
        title: 'Snow Coverage',
        description:
          'Snowy-Lane is the first large scale dataset with snow covered roads',
          icon: 'tabler:snowflake',
      },
      {
        title: 'Large Scale',
        description:
          'Snowy-Lane consists of a summer condition dataset with 20,000 frames and to snowy subsets with 30,000 frames each',
          icon: 'tabler:arrows-maximize',
      },
      {
        title: 'Synthetic Dataset',
        description:
          'Synthetic Dataset created using CARLA simulator',
          icon: 'tabler:road',
      },
      {
        title: 'Novel Map',
        description:
          'A novel map representing a rural environment in southern germany including delineator assets',
          icon: 'tabler:map',
      },
      {
        title: 'Comprehensive Sensor Suite',
        description:
          'Snowy-Lane not only provides high-resolution camera images but also LiDAR point clouds',
          icon: 'tabler:camera',
      },
      {
        title: 'Extensive Annotations',
        description:
          'We provide 2D, 3D, Map data and vehicle state ground truth information',
          icon: 'tabler:tag-starred',
      },
  ]}
  >
  <Fragment slot="features">
    <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Overview</h3>
  </Fragment>

  <Fragment slot="bg">
    <div class="absolute inset-0 bg-blue-50 dark:bg-neutral-900"></div>
  </Fragment>
</Features>

 
  <Content
  id="environment"
  isReversed
    items={[
      {
        title: 'Synthetic Environment',
        description:
          'Snowy-Lane is a synthetic dataset generated using CARLA simulator',
          icon: 'tabler:road',
      },
      {
        title: 'Novel Map',
        description:
          'A novel realistic high quality map representing rural environment in southern germany including german road assets',
          icon: 'tabler:map',
      },
      {
        title: 'Diversity',
        description:
          'Besides varying snow coverage intensities, also varying lighting conditions and precipitation is included',
          icon: 'tabler:binary-tree-2',
      },
      {
        title: '???',
        description:
          '???',
          icon: 'tabler:arrow-roundabout-left',
      },
    ]}
    image={{
      src: '~/assets/images/Cities_scenarios.png',
      alt: 'scenarios',
      
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Environment</h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-neutral-900"></div>
    </Fragment>
  </Content>

  <Content
    id="snow"
    isAfterContent
    items={[
      {
        title: 'No Snow',
        description:
          'Summer conditions without any snow',
          icon: 'tabler:sun',
      },
      {
        title: 'Light Snow',
        description:
          'Snow covered environments with no snow on the road. Road is wet.',
          icon: 'tabler:cloud',
      },
      {
        title: 'Medium Snow',
        description:
          'Road is partially covered with snow. Tyre tracks are free of snow',
          icon: 'tabler:cloud-snow',
      },
      {
        title: 'High Snow',
        description:
          'Full snow coverage of the road including tyre tracks',
          icon: 'tabler:snowflake',
      },
      
    ]}
    image={{
      src: '~/assets/images/Weather-sim.png',
      alt: 'scenarios',
      
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Snow Coverage Intensities</h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-neutral-900"></div>
    </Fragment>
  </Content>

  <Content
    id="data"
    isAfterContent
    isReversed
    items={[
      {
        title: 'High Resolution Cameras',
        description:
          'We provide image data from a RGB camera, semantic segmentation and depth camera with 1920x1080 px.',
          icon: 'tabler:camera',
      },
      {
        title: '360° LiDAR',
        description:
          'We include a 360° 32-layer LiDAR sensor with 200m sensing range',
          icon: 'tabler:360-view',
      },
      {
        title: 'Extensive Labels',
        description:
          'We include 2D labels in TuSimple format, 2D + 3D bounding boxes for delineators',
          icon: 'tabler:tags',
      },
      {
        title: 'Map data',
        description:
          'Map information is provided in OpenDrive and Lanelet format',
          icon: 'tabler:map-route',
      },
      {
        title: 'Vehicle State',
        description:
          'Information about the vehicle state (position, velocity, dimension,... ) are provided for usage of improved metrics such as Lane Safety Metric',
          icon: 'tabler:car-4wd',
      },
    ]}
    image={{
      src: '~/assets/images/SensorSetup.png',
      alt: 'Colorful Image',
      width: '983',
      height: '932'
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Data</h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-neutral-900"></div>
    </Fragment>
  </Content>

  <Content
  id="results"
  isAfterContent
  items={[
    {
      title: 'Sensor Carriers',
      description:
        'The sensor suite is mounted on a varying number of connected and automated vehicles (CAVs) and Roadside Units (RSUs) per scenario',
        icon: 'tabler:car',
    },
    {
      title: 'RGB Cameras',
      description:
        'Five RGB cameras provide stereo images as well as a 360° surround view with a resolution of 1920x1080 px',
        icon: 'tabler:camera',
    },
    {
      title: 'Semantic Segmentation Cameras',
      description:
        'Five semantic segmentation cameras with same specificataion as for the RGB cameras',
        icon: 'tabler:photo-filled',
    },
    {
      title: '32 and 64-layer 360° LiDARs',
      description:
        'Realistic LiDAR sensor model for 32-layer and 64-layer 360° LiDAR (Velodyne VLP32 and HDL64)',
        icon: 'tabler:360-view',
    },
    {
      title: 'Solid State LiDAR',
      description:
        'First dataset integrating a solid state LiDAR (Blickfeld CUBE)',
        icon: 'tabler:3d-cube-sphere',
    },
  ]}
  image={{
    src: '~/assets/images/SensorSetup.png',
    alt: 'Colorful Image',
    width: '983',
    height: '932'
  }}
>
  <Fragment slot="content">
    <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Results</h3>
  </Fragment>

  <Fragment slot="bg">
    <div class="absolute inset-0 bg-blue-50 dark:bg-neutral-900"></div>
  </Fragment>
</Content>
  <!-- FAQs Widget ******************* -->

  <FAQs
    id="faqs"
    title="Frequently Asked Questions"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Why should I use Snowy-Lane?',
        description:
          "Snowy-Lane is the first large scale lane detection dataset including snow covered roads. This allows for improving robustness of lane detection methods under such adverse conditions.",
      },
      {
        title: 'How many Frames does Snowy-Lane consist of?',
        description:
          "Snowy-Lane consists of 100 clips with 100 frames per subset and snow-coverage which leads to a total of 30,000 frames with delineators and 30,000 without. Additionally, 20,000 images under summer conditions are provided.",
      },
      {
        title: 'What is the Train/Validation/Test Split?',
        description:
          'For Snowy-Lane a 80/10/10 split per subset is used. Hence, 24,000 frames are for training and 3,000 each for validation and test',
      },
      {
        title: "Who created Snowy-Lane?",
        description:
          "Snowy-Lane was created by Jörg Gamerdinger and Sven Teufel (PhD students @ University of Tübingen), assisted by Benedict Wetzel (MSc. student) and Patrick Schulz (PhD student @ FZI). The work was supervised by Prof. Oliver Bringmann (Head of Embedded Systems Group, University of Tübingen). Thanks to all my co-authors supported this work",
      },
      {
        title: "Who can be contacted in case of questions?",
        description:
          "You can send an e-mail to Jörg Gamerdinger (joerg.gamerdinger(at)uni-tuebingen.de",
      },
      {
        title: "How to cite this Work?",
        description:
          "Citation will follow"
      },
    ]}
  />

